{
  "name": "best",
  "version": "0.0.1",
  "description": "Behavior Event State Template",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.famo.us/framework/best.git"
  },
  "bugs": {
    "url": "https://github.famo.us/framework/best/issues"
  },
  "homepage": "https://github.famo.us/framework/best",
  "scripts": {
    "develop": "npm run watch & npm run sync",
    "docs": "jsdoc lib/framework/index.js --destination docs/generated",
    "test": "npm run lint && testling '' | tap-spec",
    "lint": "eslint lib && jscs lib",
    "sync": "browser-sync start --server build/ --port 1337 --files 'build/**/*.*'",
    "copy-components": "cp -r components/ build/components",
    "watch-components": "watch 'npm run copy-components' components",
    "watch-lib": "watchify lib/index.js -t brfs -s BEST -o build/index.bundle.js --debug --verbose",
    "watch-public" : "watch 'npm run copy-public' public",
    "copy-famous": "cp ./vendor/famous-standalone.js build/",
    "copy-public": "cp -r public/ build",
    "watch": "npm run copy-famous & npm run watch-lib & npm run watch-components & npm run watch-public"
  },
  "authors": [
    "Zack Brown <zack@famo.us>",
    "Matthew Trost <matthew@famo.us>",
    "Arkady Pevzner <arkady@famo.us>",
    "Imtiaz Majeed <imtiaz@famo.us>",
    "Jordan Papaleo <jordan@famo.us>"
  ],
  "license": "Proprietary",
  "testling": {
    "files": [
      "tests/**.spec.js"
    ]
  },
  "devDependencies": {
    "babelify": "^5.0.3",
    "brfs": "^1.1.1",
    "browser-sync": "^2.2.0",
    "browserify": "^8.1.3",
    "eslint": "^0.14.1",
    "jasmine-core": "^2.2.0",
    "jscs": "^1.11.3",
    "jsdoc": "^3.3.0-beta1",
    "jshint": "^2.6.0",
    "karma": "^0.12.31",
    "karma-browserify": "^4.0.0",
    "karma-chrome-launcher": "^0.1.7",
    "karma-cli": "0.0.4",
    "karma-jasmine": "^0.3.5",
    "karma-jasmine-ajax": "^0.1.12",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-requirejs": "^0.2.2",
    "nodemon": "^1.3.7",
    "serve": "^1.4.0",
    "tap-spec": "^2.2.1",
    "tape": "^3.5.0",
    "testling": "^1.7.1",
    "uglify-js": "^2.4.16",
    "watch": "^0.14.0",
    "watchify": "^2.3.0"
  },
  "dependencies": {
    "best-function-parser": "git+ssh://git@github.famo.us:framework/function-parser#master",
    "best-state-manager": "git+ssh://git@github.famo.us:framework/state-manager#master"
  }
}
