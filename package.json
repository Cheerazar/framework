{
  "name": "workspace",
  "version": "0.0.0",
  "author": "Matthew Trost <matthew@famo.us>",
  "license": "MIT",
  "scripts": {
    "preinstall": "npm i -g envify",
    "develop": "npm run start-ecosystem & npm run watch-components & npm run watch-runtime & npm run serve-build",
    "start-ecosystem": "cd node_modules/best-ecosystem && npm run serve",
    "sync-components": "ECOSYSTEM_BASE_URI=http://localhost:8357/ best-assistant sync --baseDir=$PWD/node_modules/best-components/",
    "watch-components": "ECOSYSTEM_BASE_URI=http://localhost:8357/ best-assistant watch --baseDir=$PWD/node_modules/best-components/",
    "watch-runtime": "watchify node_modules/best-runtime/lib/index.js -s BEST -t [ envify --ECOSYSTEM_BASE_URI http://localhost:8357/ ] -o build/best.bundle.js -d -v",
    "serve-build": "serve build -p 1337"
  },
  "devDependencies": {
    "best-assistant": "git+ssh://git@github.famo.us/framework/assistant#master",
    "best-components": "git+ssh://git@github.famo.us/framework/components#master",
    "best-ecosystem": "git+ssh://git@github.famo.us/framework/ecosystem#develop",
    "best-runtime": "git+ssh://git@github.famo.us/framework/runtime#develop",
    "browserify": "^10.1.3",
    "envify": "^3.4.0",
    "serve": "^1.4.0",
    "watchify": "^3.2.1"
  }
}
